<h5>Signin to access your account</h5>
<%= simple_form_for(:user, as: :user, method: :post, url: authenticate_path) do |f| %>
  <div class="form-inputs mt-4">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", class: "form-control mb-4", placeholder: "Email" } %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: "form-control mb-4", placeholder: "Password" } %>
    <div class="section1 float-left">            
    </div>
  </div>
  <div class="form-actions my-4">
    <%= f.button :submit, "Sign In", class: "btn btn-md btn-primary btn-block" %>
  </div>
<% end %>
